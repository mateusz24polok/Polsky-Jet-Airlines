{
  "compilerOptions": {
    "target": "es5",
    "outDir": "server/dist",
    "module": "commonjs",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["server/src/**/*.ts"],
  "exclude": ["server/src/test/**/*.spec.ts"]
}
